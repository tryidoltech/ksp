@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isEdit = !string.IsNullOrEmpty(Model.UUID);
}

@model Live_ConsultingKSP.Models.AcModeOfTransport
@section Stylecss {

}

<div id="layout-wrapper">

    <!-- Vertical Overlay-->
    <div class="vertical-overlay"></div>
    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="main-content">
        <div class="page-content">
            <div class="container-fluid">
                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                            <h4 class="mb-sm-0">@((isEdit) ? "EDIT MODE OF TRANSPORT" : "ADD MODE OF PAYMENT")</h4>
                        </div>
                    </div>
                </div>
                <!-- end page title -->


                <div class="row">
                    <div class="col-lg-12">
                        <div class="card" id="CardData">

                            <div class="card-body">
                                <div class="live-preview">
                                    <form asp-action="AddModeofTransport" method="post">
                                        <input type="hidden" asp-for="@Model.UUID" />
                                        <div class="row gx-3 gy-2 align-items-center">
                                           

                                            <div class="col-lg-3 col-sm-6 col-xs-12">
                                                <label class="form-label">Title<span class="start-lable" style="color: red">*</span></label>
                                                <span asp-validation-for="Title" class="text-danger"></span>
                                                <input asp-for="Title" type="text" class="form-control" placeholder="eg. By Road">
                                            </div>

                                            <div class="col-lg-6 col-sm-6 col-xs-12">
                                                <label class="form-label">Description<span class="start-lable" style="color: red">*</span></label>
                                                <span asp-validation-for="Description" class="text-danger"></span>
                                                <textarea asp-for="Description" type="text" class="form-control" placeholder="eg."></textarea>
                                            </div>

                                            <div class="col-lg-1">
                                                <div class="form-check">
                                                    <input asp-for="IsDisplay" class="form-check-input" type="checkbox" id="autoSizingCheck2">
                                                    <label class="form-check-label" for="autoSizingCheck2">
                                                        Is Display
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-lg-2 mt-5">
                                                <button class="btn btn-primary " style="float:right;">@(isEdit ? "Update" : "Submit")</button>
                                                <a href="@Url.Action("ViewModeofTransport","Account")" class="btn btn-danger " style="float:right;margin-right:10px;"> Cancel</a>
                                            </div>
                                            <!--end col-->
                                        </div>
                                    </form>


                                </div>

                            </div>
                        </div>
                    </div> <!-- end col -->
                </div>
                <!--end row-->

            </div> <!-- container-fluid -->
        </div>
        <!-- End Page-content -->
        @* <div w3-include-html="/View/Shared/footer.cshtml"></div> *@


    </div>
    <!-- end main content-->
</div>
@section Scripts {
    <script>
        document.getElementById('hassubexpensetype').addEventListener('change', function () {
            const multipleDiv = document.getElementById('unittype');
            if (this.checked) {
                multipleDiv.style.display = 'none'; // Hide the div
            } else {
                multipleDiv.style.display = 'block'; // Show the�div
            }
        });

    </script>
}

