@model Live_ConsultingKSP.Models.ErManageReportDesignation

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isEdit = !string.IsNullOrEmpty(Model.UUID);

}

@section stylecss {
}

<div class="page-content">
    <div class="container-fluid">
        <!-- Start Page Title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">@((isEdit) ? "Edit Report Designation" : "Add Report Designation")</h4>
                </div>
            </div>
        </div>
        <!-- End Page Title -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card" id="frmCreate">
                    <div class="card-body">
                        <form method="post" asp-action="AddReportingDesignation">
                            <input type="hidden" asp-for="UUID" />

                            <div class="row gx-3 gy-2 align-items-center">
                                <!-- Designation Name Input -->
                                <div class="col-lg-3 col-sm-6 col-xs-12">
                                    <label class="form-label">Designation Name<span style="color: red">*</span></label>
                                    <span asp-validation-for="Designation_Name" class="text-danger"></span>
                                    <input type="text" asp-for="Designation_Name" class="form-control" placeholder="e.g., Manager" />
                                </div>

                                <!-- Is Report to Manager -->
                                <div class="col-lg-3">
                                    <div class="form-check">
                                        <input asp-for="IsReportToManagement" class="form-check-input" type="checkbox" id="isreportmanager">
                                        <label class="form-check-label" for="isreportmanager">
                                            Is Report to Manager
                                        </label>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-6 col-xs-12">
                                    <label class="form-label">No of ER Approval<span class="start-lable" style="color: red">*</span></label>
                                    <span asp-validation-for="Designation_Name" class="text-danger"></span>
                                    <input asp-for="NoOfER_Approval" type="text" class="form-control" id="erapproval" placeholder="eg. ">
                                </div>
                                <div class="col-lg-3 col-sm-6 col-xs-12">
                                    <label class="form-label">No of PAF Approval<span class="start-lable" style="color: red">*</span></label>
                                    <span asp-validation-for="Designation_Name" class="text-danger"></span>
                                    <input asp-for="NoOfPAF_Approval" type="text" class="form-control" id="pafapproval" placeholder="eg. ">
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-check">
                                        <input asp-for="IsDisplay" class="form-check-input" type="checkbox" id="autoSizingCheck2" checked>
                                        <label class="form-check-label" for="autoSizingCheck2">
                                            Is Display
                                        </label>
                                    </div>
                                </div>

                                <!-- Submit and Cancel Buttons -->
                                <div class="col-lg-9 mt-5">
                                    <button type="submit" class="btn btn-primary" style="float:right;">
                                        @(isEdit ? "Update" : "Submit")
                                    </button>
                                    <a href="@Url.Action("ViewReportingDesignation", "Expense")" class="btn btn-danger" style="float:right; margin-right:10px;">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card" id="CardAccessDenied" style="display:none">
                    <div class="w3-display-middle" style="margin-top:100px;">
                        <h1 class="w3-jumbo w3-animate-top w3-center"><span style="color:#38454a">Access Denied</span></h1>
                        <hr class="w3-border-white w3-animate-left" style="margin:auto;width:50%">
                        <h3 class="w3-center w3-animate-right">You don't have Rights to Access this Page</h3>
                        <h3 class="w3-center w3-animate-right">Kindly Contact Administrative</h3>
                        <h3 class="w3-center w3-animate-zoom">🚫🚫🚫🚫</h3>
                        <h6 class="w3-center w3-animate-zoom">error code:403 forbidden</h6>
                    </div>
                </div>
            </div> <!-- End Col -->
        </div> <!-- End Row -->
    </div> <!-- Container-fluid -->
</div>
<script src="assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="assets/libs/simplebar/simplebar.min.js"></script>
<script src="assets/libs/node-waves/waves.min.js"></script>
<script src="assets/libs/feather-icons/feather.min.js"></script>
<script src="assets/js/pages/plugins/lord-icon-2.1.0.js"></script>
<script src="assets/js/plugins.js"></script>
<!-- prismjs plugin -->
<script src="assets/libs/prismjs/prism.js"></script>
<script src="assets/js/app.js"></script>
<script>
    document.getElementById('isreportmanager').addEventListener('change', function () {

        const erapproval = document.getElementById('erapproval');
        const pafapproval = document.getElementById('pafapproval');
        if (this.checked) {

            erapproval.value = '';
            erapproval.disabled = false;
            pafapproval.value = '';
            pafapproval.disabled = false;
        }
        else {
            erapproval.value = '2';
            erapproval.disabled = true;
            pafapproval.value = '2';
            pafapproval.disabled = true;
        }
    });
</script>
