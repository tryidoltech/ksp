<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0">Library Search</h4>
                        <a><i class="bx bxs-pin float-end custom-icon-color"></i></a>
                    </div>

                </div>
            </div>
            <!-- end page title -->


            <div class="row">
                <div class="col-lg-12">
                    <div class="card" id="CardData">

                        <div class="card-body">
                            <div class="live-preview">

                                <div class="row gx-3 gy-2 align-items-center">
                                    <div class="col-lg-3 col-sm-6 col-xs-12">
                                        <label class="form-label">Year<span class="start-lable" style="color: red">*</span></label>
                                        <select class="form-select2 js-example-basic-single" data-choices data-choices-sorting="true" id="year">
                                            <option selected>- Select Year -</option>
                                            <option value="1">2024</option>
                                            <option value="2">2025</option>
                                        </select>
                                    </div>
                                    <div class="col-lg-3 col-sm-6 col-xs-12">
                                        <label class="form-label">Library Category <span class="start-lable" style="color: red">*</span></label>
                                        <select class="form-select2 js-example-basic-single" data-choices data-choices-sorting="true" id="gllcattype">
                                            <option selected>- Select Library Category -</option>
                                            <option value="2">IT</option>
                                            <option value="1">Account</option>
                                        </select>
                                    </div>
                                    <div class="col-lg-3 col-sm-6 col-xs-12">
                                        <label class="form-label">Library Category Tag<span class="start-lable" style="color: red">*</span></label>
                                        <select class="form-select2 js-example-basic-single" data-choices data-choices-sorting="true" id="lcatatg">
                                            <option selected>- Select Library Category Tag -</option>
                                            <option value="2">Invoice</option>
                                            <option value="1">Insurance</option>
                                        </select>
                                    </div>
                                    <div class="col-lg-3 col-sm-6 col-xs-12">
                                        <label class="form-label">Document Category<span class="start-lable" style="color: red">*</span></label>
                                        <select class="form-select2 js-example-basic-single" data-choices data-choices-sorting="true" id="dcat">
                                            <option selected>- Select Document Category -</option>
                                            <option value="2">PDF</option>
                                            <option value="1">Word</option>
                                        </select>
                                    </div>
                                    <div class="col-lg-3 col-sm-6 col-xs-12">
                                        <label class="form-label">Document Category Tag<span class="start-lable" style="color: red">*</span></label>
                                        <select class="form-select2 js-example-basic-single" data-choices data-choices-sorting="true" id="dcatag">
                                            <option selected>- Select Document Category Tag -</option>
                                            <option value="2">Hr</option>

                                        </select>
                                    </div>
                                    <div class="col-lg-3 col-sm-6 col-xs-12">
                                        <label class="form-label">Document Title <span class="start-lable" style="color: red">*</span></label>
                                        <input type="text" class="form-control" placeholder="eg. ">
                                    </div>
                                    <div class="col-lg-3 col-sm-6 col-xs-12">
                                        <label class="form-label">Renewable<span class="start-lable" style="color: red">*</span></label>
                                        <select class="form-select2 js-example-basic-single" data-choices data-choices-sorting="true" id="renew">
                                            <option selected> Is Renewable </option>
                                            <option value="2">Not Renewable</option>

                                        </select>
                                    </div>


                                    <div class="col-lg-3 mt-5">
                                        <a href="#" class="btn btn-primary " style="float:right;"> Search</a>
                                    </div>
                                    <!--end col-->
                                </div>


                            </div>

                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="buttons-datatables" class="display table table-bordered"
                                       style="width:100%;">
                                    <thead>
                                        <tr>
                                            <th>Sr.No</th>
                                            <th>Year</th>
                                            <th>Library Category</th>
                                            <th>Library Category Tag</th>
                                            <th>Document Category</th>
                                            <th>Document Category Tag</th>
                                            <th>Document Title</th>
                                            <th>Renewable Type</th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td>
                                                2024
                                            </td>
                                            <td> Accounts</td>
                                            <td>Certificate</td>
                                            <td>PDF</td>
                                            <td>Other</td>
                                            <td>GST Certificate</td>


                                            <td><span class="badge bg-danger">False</span></td>

                                        </tr>
                                    </tbody>
                                </table>

                            </div>

                        </div>


                    </div>
                    <div class="card" id="CardAccessDenied" style="display:none">
                        <div class="w3-display-middle" style="margin-top:100px;">
                            <h1 class="w3-jumbo w3-animate-top w3-center"><span style="color:#38454a">Access Denied</span></h1>
